{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "ES2021",
    "experimentalDecorators": true, // If using decorators for things like DI
    "emitDecoratorMetadata": true,  // If using decorators for things like DI
    "paths": {
      "@shared-types/*": ["../../packages/shared-types/src/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../../packages/shared-types" }]
}
