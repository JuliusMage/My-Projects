{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "module": "ESNext", // Suitable for modern bundlers
    "moduleResolution": "bundler", // Explicitly set modern module resolution
    "composite": true // Important for being referenced by other projects
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
